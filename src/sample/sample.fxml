<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label text="Enter your name:" GridPane.columnIndex="0" GridPane.rowIndex="0"
    focusTraversable="true"/>
    <TextField fx:id="firstName" prefWidth="200" GridPane.columnIndex="0" GridPane.rowIndex="1"
               promptText="First Name"/>
<!--    focusTraversable="false"-->
    <TextField  fx:id="lastName" prefWidth="200" GridPane.columnIndex="0" GridPane.rowIndex="2"
    promptText="Last Name" />
<!--    focusTraversable="false"-->
    <Button text="Submit" GridPane.columnIndex="0" GridPane.rowIndex="3"
            onAction="#showName"/>
    <Label fx:id="name" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
</GridPane>